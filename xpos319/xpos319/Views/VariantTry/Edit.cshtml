@using xpos319.viewmodels;
@model VMTblVariant;
@{
    Layout = null;
    ViewData["Title"] = "Edit Variant Try";
}

<div>
    <form asp-action="Edit" method="post" id="form_input">

        <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.Id" />

        <div class="form-group row mb-4">
            <label for="NameVariant" class="col-sm-2 col-form-label">Name Category</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="NameVariant" name="NameVariant" value="@Model.NameVariant" />
            </div>
        </div>

        <div class="mb-4 row">
            <label for="IdCategory" class="col-sm-4 col-form-label">Name Category</label>
            <div class="col-sm-10">
                @Html.DropDownList("IdCategory", new SelectList(ViewBag.dropDownCat,"Id","NameCategory"),
                "--Pilih Category--", new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group row mb-4">
            <label for="Description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                @*<input type="text" class="form-control" id="Address">*@
                <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>

            </div>
        </div>

        <div class="form-group row mt-xl-5">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <button class="btn btn-light" asp-controller="VariantTry" asp-action="Index">Cancel</button>
            </div>
        </div>
    </form>
</div>

<script>
    $("#form_input").validate({
        errorClass: "text-danger",
        rules:{
            NameVariant: {
                rewuired: true,
                minlength: 5,
            },
            IdCategory: "required"
        },
        messages:{
            NameVariant: {
                required: "Please fill name variant",
                minlength: "The name variant must than 5 character",
            },
            IdCategory: "Please select category"
        }
    })
</script>