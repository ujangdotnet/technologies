@model Friend;

@{
    ViewData["Title"] = "Edit Friend";
}

<div class="h4 mb-4">
    <h1>Edit Friends</h1>
    <p>ini halaman edit data teman baru</p>
</div>
<div>
    <form action="Edit" method="post">
        <div class="form-group row mb-4">
            <label for="Id" class="col-sm-2 col-form-label">Id</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Id" name="Id" value="@Model.Id" readonly>
            </div>
        </div>
        <div class="form-group row mb-4">
            <label for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
            </div>
        </div>
        <div class="form-group row mb-4">
            <label for="Address" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-10">
                @*<input type="text" class="form-control" id="Address">*@
                <textarea class="form-control" id="Address" name="Address">@Model.Address</textarea>

            </div>
        </div>

        <div class="form-group row mt-xl-5">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a class="btn btn-light" asp-controller="Friend" asp-action="Index">back</a>
            </div>
        </div>
    </form>
</div>