@using xpos319.viewmodels;
@{
	ViewData["Title"] = "Category Try";
}

<div class="h4 mb-4">
    <h1>Category Try</h1>
    <p>ini halaman category try.</p>
</div>
<div>
    <button class="btn btn-outline-primary" id="test">Create</button>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name Category</th>
                <th scope="col">Description</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (VMTblCategory item in Model) // kalo mau pake viewbage, fuctionnya ganti jadi ([nama-class]/ variabel [nama item] in [nama view bag ]
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.NameCategory</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-primary btn_edit" data-id="@item.Id">Edit</a>
                        <a class="btn btn-secondary btn_detail" data-id="@item.Id">Detail</a>
                        <a class="btn btn-danger btn_delete" data-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

<script>
    $("#test").click(function () {
        $(".modal-body").empty()
        $(".modal-body").load("CategoryTry/Create")
        $(".modal").modal("show") //show disini adalah bawaan dari jquery
    });

    $(".btn_edit").click(function(){
        var id = $(this).data("id")

        $(".modal-body").empty()
        $(".modal-body").load("CategoryTry/Edit?id=" + id)
        $(".modal").modal("show")
    })

    $(".btn_detail").click(function () {
        var id = $(this).data("id")

        $(".modal-body").empty()
        $(".modal-body").load("CategoryTry/Detail?id=" + id)
        $(".modal").modal("show")
    })

    $(".btn_delete").click(function () {
        var id = $(this).data("id")

        $(".modal-body").empty()
        $(".modal-body").load("CategoryTry/Delete?id=" + id)
        $(".modal").modal("show")
    })
</script>
