@using xpos319.viewmodels;

@model VMTblCategory;

@{
	Layout = null;
	ViewData["Title"] = "Create Category";
}

<div class="h4 mb-4">
    <h1>Create Category</h1>
    <p>ini halaman create category.</p>
</div>
<div>
    <form asp-action="Create" method="post">
     
        <div class="form-group row mb-4">
            <label for="NameCategory" class="col-sm-2 col-form-label">Name Category</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="NameCategory" name="NameCategory" value="@Model.NameCategory">
                <span asp-validation-for="NameCategory" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-4">
            <label for="Description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                @*<input type="text" class="form-control" id="Address">*@
                <textarea class="form-control" id="Description" name="Description"></textarea>

            </div>
        </div>

        <div class="form-group row mt-xl-5">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button class="btn btn-light" asp-controller="CategoryTry" asp-action="Index">Cancel</button>
            </div>
        </div>
    </form>
</div>
